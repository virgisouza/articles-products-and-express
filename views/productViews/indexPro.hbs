{{!-- /products --}}

<h1>Display All Products </h1>
{{!-- handlebar comments, not visible in the inspector --}}
<div class="collection">
  <ul class='product-list'>
    {{#each products}}
      <br>
      <li>Id# : {{id}}</li>
      <li>Name : {{name}}</li>
      <li>Price : {{price}}</li>
      <li>Inventory : {{inventory}}</li>
      <br>
    {{/each}}
  </ul>
</div>

<a href="http://localhost:3000/products/new">Create New Product</a>

